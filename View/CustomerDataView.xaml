<UserControl
    x:Class="MiniERP.UI.View.CustomerDataView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MiniERP.UI.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:MiniERP.UI.Model"
    xmlns:view="clr-namespace:MiniERP.UI.View.Customer"
    xmlns:vmc="clr-namespace:MiniERP.UI.ViewModel.Customer"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#f0f0f0"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Top Tool Bar  -->
        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="#fff"
            Orientation="Horizontal">

            <!--  Save Button  -->
            <Button
                Margin="3,0,0,0"
                Padding="5,0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding SaveCustomerCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/save.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="Save" />
                </StackPanel>
            </Button>

            <!--  Delete Button  -->
            <Button
                Margin="3,0,0,0"
                Padding="5,0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding}">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/delete.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="Delete" />
                </StackPanel>
            </Button>
        </StackPanel>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            BorderBrush="LightGray"
            BorderThickness="1">

            <TreeView
                HorizontalAlignment="Stretch"
                ItemsSource="{Binding NavItems}"
                SelectedItemChanged="TreeView_SelectedItemChanged">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type model:NavItem}" ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding Header}" />
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </TreeView>
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,5,5,5"
            BorderBrush="LightGray"
            BorderThickness="1">

            <ContentControl Content="{Binding CurrentPage}">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type vmc:CustomerAddressViewModel}">
                        <view:CustomerAddressView />
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type vmc:CustomerContactGridViewModel}">
                        <view:CustomerContactGridView />
                    </DataTemplate>

                </ContentControl.Resources>
            </ContentControl>
        </Border>
    </Grid>
</UserControl>
