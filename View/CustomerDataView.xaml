<UserControl
    x:Class="MiniERP.UI.View.CustomerDataView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MiniERP.UI.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:MiniERP.UI.Model"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            Margin="5"
            BorderBrush="LightGray"
            BorderThickness="1">

            <TreeView HorizontalAlignment="Stretch" ItemsSource="{Binding NavItems}">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type model:NavItem}" ItemsSource="{Binding Children}">
                        <TextBlock Text="{Binding Header}" />
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </TreeView>
        </Border>

        <Border
            Grid.Column="1"
            Margin="0,5,5,5"
            BorderBrush="LightGray"
            BorderThickness="1" />
    </Grid>
</UserControl>
