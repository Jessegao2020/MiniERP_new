<UserControl
    x:Class="MiniERP.UI.View.Customer.CustomerAddressView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MiniERP.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MiniERP.UI.View.Customer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#fff"
    mc:Ignorable="d">
    <Grid Margin="30,20,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <!--  Active Checkbox  -->
        <CheckBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,0,0,5"
            HorizontalAlignment="Right"
            Content="Active"
            IsChecked="{Binding CustomerDTO.IsActive, Mode=TwoWay}" />

        <!--  Name  -->
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            HorizontalAlignment="Right"
            Text="Name" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Width="200"
            Margin="5,0,0,0"
            Text="{Binding CustomerDTO.Name, UpdateSourceTrigger=PropertyChanged}" />

        <!--  Address 1  -->
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            HorizontalAlignment="Right"
            Text="Address Line 1" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Width="200"
            Margin="5,0,0,0"
            Text="{Binding CustomerDTO.AddressLine1, UpdateSourceTrigger=PropertyChanged}" />

        <!--  Address 2  -->
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            HorizontalAlignment="Right"
            Text="Address Line 2" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Width="200"
            Margin="5,0,0,0"
            Text="{Binding CustomerDTO.AddressLine2, UpdateSourceTrigger=PropertyChanged}" />

        <!--  Country  -->
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            HorizontalAlignment="Right"
            Text="City-Zipcode-State" />
        <Grid
            Grid.Row="4"
            Grid.Column="1"
            Margin="5,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <controls:PickerTextBox
                Grid.Column="0"
                Width="50"
                BrowseCommand="{Binding PickCountryCommand}"
                BrowseCommandParameter="{Binding CustomerDTO.CountryCode}"
                IsReadOnly="True"
                Text="{Binding CustomerDTO.CountryCode, Mode=OneWay}" />
            <TextBox Grid.Column="1" Text="{Binding CustomerDTO.PostalCode, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Grid.Column="2" Text="{Binding CustomerDTO.City, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
    </Grid>
</UserControl>
