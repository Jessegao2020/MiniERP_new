<Window
    x:Class="MiniERP.UI.View.Customer.CountryPickerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MiniERP.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MiniERP.UI.View.Customer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Country"
    Width="400"
    Height="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <controls:FilterableDataGrid
            Grid.Row="0"
            ItemsSource="{Binding Countries}"
            MouseDoubleClick="DataGrid_MouseDoubleClick"
            SelectedItem="{Binding SelectedCountry, Mode=TwoWay}">

            <controls:FilterableDataGrid.Columns>
                <DataGridTextColumn
                    Width="60"
                    Binding="{Binding Code}"
                    Header="Code" />

                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Name}"
                    Header="Country" />
            </controls:FilterableDataGrid.Columns>

        </controls:FilterableDataGrid>

        <!--  底部：按钮  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,10,0,10"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="90"
                Margin="0,0,8,0"
                Click="Ok_Click"
                Content="OK"
                IsDefault="True" />
            <Button
                Width="90"
                Click="Cancel_Click"
                Content="Cancel"
                IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
