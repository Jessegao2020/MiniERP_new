<UserControl
    x:Class="MiniERP.UI.View.Customer.CustomerContactGridView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MiniERP.UI.View.Customer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:MiniERP.UI.Model"
    d:DesignHeight="450"
    d:DesignWidth="600"
    Background="#fff"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <!--  New Button  -->
            <Button
                Margin="3,0,0,0"
                Padding="5,0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding OpenCreateViewCommand}"
                CommandParameter="{x:Static model:PageType.CustomerContact}">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/new.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="New" />
                </StackPanel>
            </Button>

            <!--  Duplicate Button  -->
            <Button
                Margin="3,0,0,0"
                Padding="5,0"
                Background="Transparent"
                BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/duplicate.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="Edit" />
                </StackPanel>
            </Button>

            <!--  Delete Button  -->
            <Button
                Margin="3,0,0,0"
                Padding="5,0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding DeleteArticleCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/delete.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="Delete" />
                </StackPanel>
            </Button>
        </StackPanel>

        <DataGrid Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
