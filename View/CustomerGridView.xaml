<UserControl
    x:Class="MiniERP.UI.View.CustomerGridView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MiniERP.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MiniERP.UI.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:MiniERP.UI.Model"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--  Top Tool Bar  -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <!--  New Button  -->
            <Button
                Margin="3,0,0,0"
                Padding="5,0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding OpenCreateViewCommand}"
                CommandParameter="{x:Static model:PageType.CustomerData}">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/new.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="New" />
                </StackPanel>
            </Button>

            <!--  Duplicate Button  -->
            <Button
                Margin="3,0,0,0"
                Padding="5,0"
                Background="Transparent"
                BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/duplicate.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="Duplicate" />
                </StackPanel>
            </Button>

            <!--  Delete Button  -->
            <Button
                Margin="3,0,0,0"
                Padding="5,0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding}">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/delete.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="Delete" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!--  Customized DataGrid  -->
        <controls:FilterableDataGrid
            Grid.Row="1"
            Margin="0,5,0,0"
            ItemsSource="{Binding Customers}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectedItem="{Binding SelectedArticle, Mode=TwoWay}">

            <controls:FilterableDataGrid.Columns>

                <DataGridTextColumn
                    Width="3*"
                    Binding="{Binding Name}"
                    Header="Name" />

                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding AddressLine1}"
                    Header="Address" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding City}"
                    Header="City" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding State}"
                    Header="State" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding PostalCode}"
                    Header="Postal" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Country}"
                    Header="Country" />

            </controls:FilterableDataGrid.Columns>
        </controls:FilterableDataGrid>

        <!--  Footer  -->
        <Border
            Grid.Row="2"
            Padding="0,2"
            Background="#e8e8e8"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Margin="50,0,0,0"
                    Foreground="#cb004a"
                    Text="Created At:" />

                <TextBlock
                    Grid.Column="1"
                    Margin="50,0,0,0"
                    Foreground="#cb004a"
                    Text="Created By:" />

                <TextBlock
                    Grid.Column="2"
                    Margin="50,0,0,0"
                    Foreground="#cb004a"
                    Text="Edted At:" />

                <TextBlock
                    Grid.Column="3"
                    Margin="50,0,0,0"
                    Foreground="#cb004a"
                    Text="Edited By:" />

                <TextBlock
                    Grid.Column="4"
                    Margin="50,0,0,0"
                    Foreground="#cb004a"
                    Text="Created on:" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
