<Window
    x:Class="MiniERP.UI.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MiniERP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1200"
    Height="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Padding="2">
            <MenuItem Header="File" />
            <MenuItem Header="Edit" />
            <MenuItem Header="About" />
        </Menu>

        <TabControl x:Name="MenuTabControl" Grid.Row="1">
            <TabItem
                Padding="10,5"
                Background="Transparent"
                Header="General">
                <StackPanel Orientation="Horizontal">
                    <Button
                        Width="60"
                        Height="50"
                        Margin="0,2"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding OpenPageCommand}"
                        CommandParameter="Article">
                        <StackPanel>
                            <Image
                                Width="32"
                                Height="32"
                                Source="/Assets/article.png" />
                            <TextBlock Text="Article" />
                        </StackPanel>
                    </Button>
                    <Button
                        Width="60"
                        Height="50"
                        Margin="5,0,0,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding OpenPageCommand}"
                        CommandParameter="Customer">
                        <StackPanel>
                            <Image
                                Width="32"
                                Height="32"
                                Source="/Assets/customer.png" />
                            <TextBlock Text="Customer" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </TabItem>
            <TabItem
                Padding="10,5"
                Background="Transparent"
                Header="Documents">
                <StackPanel Orientation="Horizontal">
                    <Button
                        Width="60"
                        Height="50"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding OpenPageCommand}"
                        CommandParameter="Quotation">
                        <StackPanel>
                            <Image
                                Width="32"
                                Height="32"
                                Source="/Assets/quotation.png" />
                            <TextBlock HorizontalAlignment="Center" Text="Quote" />
                        </StackPanel>
                    </Button>
                    <Button
                        Width="60"
                        Height="50"
                        Margin="5,2,0,2"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding OpenPageCommand}"
                        CommandParameter="Order">
                        <StackPanel>
                            <Image
                                Width="32"
                                Height="32"
                                Source="/Assets/order.png" />
                            <TextBlock HorizontalAlignment="Center" Text="Order" />
                        </StackPanel>
                    </Button>
                    <Button
                        Width="60"
                        Height="50"
                        Margin="5,0,0,0"
                        Background="Transparent"
                        BorderThickness="0">
                        <StackPanel>
                            <Image
                                Width="32"
                                Height="32"
                                Source="/Assets/invoice.png" />
                            <TextBlock HorizontalAlignment="Center" Text="Invoice" />
                        </StackPanel>
                    </Button>
                    <Button
                        Width="60"
                        Height="50"
                        Margin="5,0,0,0"
                        Background="Transparent"
                        BorderThickness="0">
                        <StackPanel>
                            <Image
                                Width="32"
                                Height="32"
                                Source="/Assets/packing-list.png" />
                            <TextBlock HorizontalAlignment="Center" Text="P/L" />
                        </StackPanel>
                    </Button>
                    <Button
                        Width="60"
                        Height="50"
                        Margin="5,0,0,0"
                        Content="P/I" />
                    <Button
                        Width="60"
                        Height="50"
                        Margin="5,0,0,0"
                        Content="Contract" />
                </StackPanel>
            </TabItem>
            <TabItem
                Padding="10,5"
                Background="Transparent"
                Header="Settings">
                <StackPanel Orientation="Horizontal">
                    <Button
                        Width="60"
                        Height="50"
                        Content="System" />
                    <Button
                        Width="60"
                        Height="50"
                        Margin="5,2,0,2"
                        Content="User" />
                </StackPanel>
            </TabItem>
        </TabControl>
        <TabControl
            x:Name="ContentTabControl"
            Grid.Row="2"
            ItemsSource="{Binding OpenedTabs}"
            SelectedItem="{Binding SelectedTab}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Title}" />
                        <Button
                            Margin="5,0,0,0"
                            Padding="0"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding DataContext.CloseTabCommand, RelativeSource={RelativeSource AncestorType=TabControl}}"
                            CommandParameter="{Binding}"
                            Content="×"
                            Cursor="Hand"
                            FontSize="10"
                            FontWeight="Bold" />
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding ContentView}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</Window>
