<UserControl
    x:Class="MiniERP.UI.View.ArticleGridView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MiniERP.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MiniERP.UI.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:MiniERP.UI.Model"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--  Top Tool Bar  -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <!--  New Button  -->
            <Button
                Margin="3,0,0,0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding OpenCreateViewCommand}"
                CommandParameter="{x:Static model:PageType.ArticleData}">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/new.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="New" />
                </StackPanel>
            </Button>

            <!--  Duplicate Button  -->
            <Button
                Margin="3,0,0,0"
                Background="Transparent"
                BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/duplicate.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="Duplicate" />
                </StackPanel>
            </Button>

            <!--  Delete Button  -->
            <Button
                Margin="3,0,0,0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding DeleteArticleCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/delete.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="Delete" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!--  Customized DataGrid  -->
        <controls:FilterableDataGrid
            Grid.Row="1"
            ItemsSource="{Binding Articles}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectedItem="{Binding SelectedArticle, Mode=TwoWay}">

            <controls:FilterableDataGrid.Columns>

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="物料编码" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Price, StringFormat='{}{0:F2}'}"
                    Header="单价" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding MinimumPrice, StringFormat='{}{0:F2}'}"
                    Header="最低价" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Description}"
                    Header="描述" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Specification}"
                    Header="规格" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Discount}"
                    Header="折扣" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Note}"
                    Header="备注" />

            </controls:FilterableDataGrid.Columns>

        </controls:FilterableDataGrid>

        <!--  Footer  -->
        <Border
            Grid.Row="2"
            Padding="0,2"
            Background="#e8e8e8"
            BorderBrush="LightGray"
            BorderThickness="1"
            CornerRadius="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Margin="50,0,0,0"
                    Foreground="#cb004a"
                    Text="Created At:" />

                <TextBlock
                    Grid.Column="1"
                    Margin="50,0,0,0"
                    Foreground="#cb004a"
                    Text="Created By:" />

                <TextBlock
                    Grid.Column="2"
                    Margin="50,0,0,0"
                    Foreground="#cb004a"
                    Text="Edted At:" />

                <TextBlock
                    Grid.Column="3"
                    Margin="50,0,0,0"
                    Foreground="#cb004a"
                    Text="Edited By:" />

                <TextBlock
                    Grid.Column="4"
                    Margin="50,0,0,0"
                    Foreground="#cb004a"
                    Text="Created on:" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
