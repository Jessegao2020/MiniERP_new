<UserControl
    x:Class="MiniERP.UI.View.QuotationDataView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MiniERP.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MiniERP.UI.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button
                Margin="3,0,0,0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding OpenCreateViewCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/new.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="New" />
                </StackPanel>
            </Button>
            <Button
                Margin="3,0,0,0"
                Background="Transparent"
                BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/duplicate.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="Duplicate" />
                </StackPanel>
            </Button>
            <Button
                Margin="3,0,0,0"
                Background="Transparent"
                BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/delete.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="Delete" />
                </StackPanel>
            </Button>
        </StackPanel>

        <controls:FilterableDataGrid
            Grid.Row="1"
            ItemsSource="{Binding Articles}"
            SelectedItem="{Binding SelectedArticle, Mode=TwoWay}">
            <controls:FilterableDataGrid.Columns>
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding Id}"
                    Header="ID" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Company" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Price, StringFormat='{}{0:F2}'}"
                    Header="Street" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding MinimumPrice, StringFormat='{}{0:F2}'}"
                    Header="City" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Description}"
                    Header="Postal" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Specification}"
                    Header="Country" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Discount}"
                    Header="Title" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Note}"
                    Header="Contact" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Note}"
                    Header="Created By" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Note}"
                    Header="Delivery Term" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Note}"
                    Header="Payment Term" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Note}"
                    Header="Created At" />
            </controls:FilterableDataGrid.Columns>
        </controls:FilterableDataGrid>
    </Grid>
</UserControl>
