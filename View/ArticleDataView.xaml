<UserControl
    x:Class="MiniERP.UI.View.ArticleDataView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MiniERP.UI.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Top Tool Bar  -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <!--  Save Button  -->
            <Button
                Margin="3,0,0,0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding SaveCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/save.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="Save" />
                </StackPanel>
            </Button>

            <!--  Discard Button  -->
            <Button
                Margin="3,0,0,0"
                Background="Transparent"
                BorderThickness="0">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/discard.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="Discard" />
                </StackPanel>
            </Button>

            <!--  Delete Button  -->
            <Button
                Margin="3,0,0,0"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding DeleteCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Source="/Assets/delete.png" />
                    <TextBlock
                        Padding="2,3"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Text="Delete" />
                </StackPanel>
            </Button>
        </StackPanel>

        <!--  Content Area  -->
        <Grid Grid.Row="1" Tag="Content">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <!--  Textbox Labels  -->
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,2"
                HorizontalAlignment="Right"
                Text="Name" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Margin="0,2"
                HorizontalAlignment="Right"
                Text="CNY Untaxed" />
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Margin="0,2"
                HorizontalAlignment="Right"
                Text="USD Untaxed" />
            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                Margin="0,2"
                HorizontalAlignment="Right"
                Text="Specification" />
            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                Margin="0,2"
                HorizontalAlignment="Right"
                Text="Description" />
            <TextBlock
                Grid.Row="6"
                Grid.Column="0"
                Margin="0,2"
                HorizontalAlignment="Right"
                Text="Discount" />
            <TextBlock
                Grid.Row="7"
                Grid.Column="0"
                Margin="0,2"
                HorizontalAlignment="Right"
                Text="Note" />

            <!--  Chinese Files  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Margin="5,2"
                HorizontalAlignment="Center"
                Text="CHN" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                MinWidth="150"
                Margin="5,2"
                Text="{Binding Article.Name, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                MinWidth="150"
                Margin="5,2"
                Text="{Binding Article.Price, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                Grid.Row="3"
                Grid.Column="1"
                MinWidth="150"
                Margin="5,2"
                Text="" />
            <TextBox
                Grid.Row="4"
                Grid.Column="1"
                MinWidth="150"
                MinHeight="80"
                Margin="5,2"
                Text="{Binding Article.Specification, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                Grid.Row="5"
                Grid.Column="1"
                MinWidth="150"
                MinHeight="80"
                Margin="5,2"
                Text="{Binding Article.Description, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                Grid.Row="6"
                Grid.Column="1"
                MinWidth="150"
                MinHeight="80"
                Margin="5,2"
                Text="{Binding Article.Discount, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                Grid.Row="7"
                Grid.Column="1"
                MinWidth="150"
                MinHeight="80"
                Margin="5,2"
                Text="{Binding Article.Note, UpdateSourceTrigger=PropertyChanged}" />

            <!--  English Fileds  -->
            <TextBlock
                Grid.Row="0"
                Grid.Column="2"
                Margin="5,2"
                HorizontalAlignment="Center"
                Text="EN" />
            <TextBox
                Grid.Row="1"
                Grid.Column="2"
                MinWidth="150"
                Margin="5,2"
                Text="{Binding Article.Name_EN, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                Grid.Row="4"
                Grid.Column="2"
                MinWidth="150"
                MinHeight="80"
                Margin="5,2"
                Text="{Binding Article.Specs_EN, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                Grid.Row="5"
                Grid.Column="2"
                MinWidth="150"
                MinHeight="80"
                Margin="5,2"
                Text="{Binding Article.Description_EN, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
    </Grid>
</UserControl>
