<UserControl
    x:Class="MiniERP.UI.Controls.PickerTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MiniERP.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="root"
    d:DesignHeight="30"
    d:DesignWidth="80"
    mc:Ignorable="d">

    <Grid Height="17">
        <TextBox
            Padding="2,0,20,0"
            VerticalContentAlignment="Center"
            IsReadOnly="{Binding IsReadOnly, ElementName=root}"
            Text="{Binding Text, ElementName=root, UpdateSourceTrigger=PropertyChanged}" />

        <Button
            Width="15"
            HorizontalAlignment="Right"
            Command="{Binding BrowseCommand, ElementName=root}"
            CommandParameter="{Binding BrowseCommandParameter, ElementName=root}"
            Content="..."
            Focusable="False" />
    </Grid>
</UserControl>
